@model List<CompanySolution.Domain.Models.Company>

@{
    ViewData["Title"] = "Companies";
}

<div class="form-row">
    <div class="col-6">
        <h4 class="text-info"></h4>
    </div>
    <div class="col-6 text-right ">
        <a asp-action="Create" class="btn btn-outline-dark rounded">Create Company</a>
    </div>
</div>
<br />
<div class="row">
    @{
        if (Model == null)
        {
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">Create Company</h5>
            </div>
        }
        foreach (var com in Model)
        {
            <div class="col-sm-4 rounded" >
                <div class=" w-100 rounded shadow align-items-start"
                     style="background-color: #E0E7E9; padding: 2px 4px 4px 4px; border: groove; border-color: #6C7A89 ">

                    <div class="d-flex flex-column" style="background-color: #354649; border-color: #6C7A89; color:whitesmoke">
                        <div class="p-1 w-100 d-flex justify-content-center">
                            <h6 class="mb-1 text-Secondary">@com.CompanyName</h6>
                        </div>
                        <div class="p-1 w-100 d-flex justify-content-center">
                            <h6 class="mb-1 text-Secondary">@com.Bulstat</h6>
                        </div>
                    </div>
                    <hr />
                    <div class="clearfix">
                        <a onclick="GetCompanyForEmployees('@com.id','@com.CompanyName')" data-toggle="modal" data-target="#exampleModal" asp-action="/"
                           class="btn btn-light float-left"><i class="fas fa-users"> Employee</i></a>
                        <a onclick="GetCompanyForDepartment('@com.id','@com.CompanyName')" data-toggle="modal" data-target="#exampleModal" asp-action="/"
                           class="btn btn-light float-right"><i class="fas fa-building"> Department</i></a>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-center">
                        <a onclick="GetCompanyForDepartment('@com.id','@com.CompanyName')" data-toggle="modal" data-target="#exampleModal" asp-action="/"
                           class="btn btn-info d-flex justify-content-center"><i class="fas fa-info-circle"> Contract Information</i></a>
                    </div>
                    <br />
                    <div class="clearfix">
                        <a onclick="GetCompanyToDelete('@com.id','@com.CompanyName')" data-toggle="modal" data-target="#exampleModal" asp-action="/"
                           class="btn btn-outline-black float-right"><i class="far fa-trash-alt"></i></a>
                    </div>
                </div>
                <hr hidden/>
                <br><br>
            </div>

        }
    }
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure - <br /> Delete item: <span id="CompanyName"></span>-<span id="CompanyId"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="DeleteCompany()" type="button" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="DeleteCompany()" type="button" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    function GetCompanyToDelete(id, CompanyName) {
        var $Company = $("#CompanyName");
        var $id = $("#CompanyId");

        $Company.html(CompanyName);
        $id.html(id);
    }

    function DeleteCompany() {
        var $id = $("#CompanyId").html();
        window.location = "/Company/Delete/"+$id;
    }
</script>
